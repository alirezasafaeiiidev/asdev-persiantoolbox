{
  "version": 1,
  "monthlyClose": [
    {
      "id": "MON-OPS-001",
      "title": "Validate aggregated ad metrics report",
      "requiredArtifacts": [
        "ad-metrics-report-30d.json",
        "docs/monetization/monthly-report-template.md"
      ],
      "requiredChecks": ["consentAcceptanceRate", "topVariantId", "ctr"],
      "ownerRole": "quality_engineer",
      "decisionGate": "hold"
    },
    {
      "id": "MON-OPS-002",
      "title": "Sync review outputs to executable backlog",
      "requiredArtifacts": ["docs/monetization/review-backlog.json"],
      "requiredChecks": ["priority_order", "decision_labels", "kpi_targets"],
      "ownerRole": "engineering_lead",
      "decisionGate": "scale"
    },
    {
      "id": "MON-OPS-003",
      "title": "Run admin/privacy guardrail verification",
      "requiredArtifacts": [
        "docs/monetization/admin-security-checklist.md",
        "docs/monetization/analytics-guardrails.md"
      ],
      "requiredChecks": ["admin_authz", "sensitive_log_review", "privacy_guardrails"],
      "ownerRole": "quality_engineer",
      "decisionGate": "rollback"
    }
  ],
  "quarterlyReview": [
    {
      "id": "MON-QTR-001",
      "title": "Scale/Hold/Rollback decision ratification",
      "requiredArtifacts": [
        "docs/monetization/scale-hold-rollback-playbook.md",
        "docs/monetization/kpi-governance.md"
      ],
      "requiredChecks": ["kpi_owner_signoff", "privacy_risk_review", "ux_risk_review"],
      "ownerRole": "engineering_lead",
      "decisionGate": "scale"
    },
    {
      "id": "MON-QTR-002",
      "title": "Cost and retention posture review",
      "requiredArtifacts": [
        "docs/monetization/monthly-report-template.md",
        "docs/monetization/kpi-alerting-escalation.md"
      ],
      "requiredChecks": ["storage_cost_trend", "retention_signal", "alert_escalation_status"],
      "ownerRole": "quality_engineer",
      "decisionGate": "hold"
    }
  ],
  "decisionRules": [
    {
      "decision": "scale",
      "requires": ["privacy_guardrails_passed", "no_open_security_incident", "ctr_non_degrading"],
      "blocks": ["critical_privacy_violation", "red_alert_kpi"]
    },
    {
      "decision": "hold",
      "requires": ["insufficient_signal_or_high_variance", "guardrails_still_enforced"],
      "blocks": ["critical_security_incident"]
    },
    {
      "decision": "rollback",
      "requires": ["privacy_or_security_risk_confirmed"],
      "blocks": []
    }
  ]
}
