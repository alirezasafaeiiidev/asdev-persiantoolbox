# Local development environment (safe defaults)
# Copy to `.env.local` and fill values as needed.

# Application
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME="جعبه ابزار فارسی"
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=

# Analytics (Self-hosted, optional)
# If you set NEXT_PUBLIC_ANALYTICS_ID, the client will try to send events to NEXT_PUBLIC_ANALYTICS_ENDPOINT
# but only after user consent (see consent contract in code).
NEXT_PUBLIC_ANALYTICS_ID=
NEXT_PUBLIC_ANALYTICS_ENDPOINT=/api/analytics
ANALYTICS_DATA_DIR=var/analytics
# In production you should enforce this and inject via nginx; for local it can be empty.
ANALYTICS_INGEST_SECRET=

# App storage & auth
APP_DATA_DIR=var/app
# If you don't need admin DB-backed settings locally, you can leave DATABASE_URL empty and admin pages remain unavailable.
DATABASE_URL=
SESSION_TTL_DAYS=7
SUBSCRIPTION_WEBHOOK_SECRET=
ADMIN_EMAIL_ALLOWLIST=asdevelooper@gmail.com,parsairaniiidev@gmail.com,alirezasafaeiiidev@proton.me

# Support Links (optional)
NEXT_PUBLIC_SUPPORT_ONETIME_URL=
NEXT_PUBLIC_SUPPORT_MONTHLY_URL=
NEXT_PUBLIC_SUPPORT_SPONSOR_URL=

# Developer Attribution Links (Footer + Admin)
DEVELOPER_NAME="علیرضا صفایی"
DEVELOPER_BRAND_TEXT="ASDEV | Alireza Safaei — Production-Grade Web Systems Engineer | Architecture • Scalability • Reliability"
# Optional: link for "request a custom tool" CTA
ORDER_URL=
# Portfolio link (fallback route exists: /asdev-portfolio)
PORTFOLIO_URL=https://alirezasafaeidev.ir

# Feature Flags
NEXT_PUBLIC_ENABLE_BETA_FEATURES=true
NEXT_PUBLIC_FEATURE_V3_NAV=0
FEATURE_V3_REDIRECTS=0
FEATURE_V3_ANALYTICS_POLICY=0
