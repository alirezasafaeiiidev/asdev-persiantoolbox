[Unit]
Description=Persian Tools Production (PM2 runtime)
After=network.target

[Service]
Type=simple
User=deploy
LimitNOFILE=infinity
LimitNPROC=infinity
LimitCORE=infinity
Environment=PM2_HOME=/home/deploy/.pm2
WorkingDirectory=/var/www/persian-tools/current/production
ExecStart=/usr/bin/pm2-runtime start /var/www/persian-tools/current/production/ecosystem.config.cjs --only persian-tools-production
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
